generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email    String    @id
  googleId String
  name     String
  imgUrl   String
  comments Comment[]
}

model Comment {
  id        Int    @id @default(autoincrement())
  userId    String
  borderNum String
  userInput String
  user      User?  @relation(fields: [userId], references: [email])
}
